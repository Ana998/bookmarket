@model IEnumerable<Product>


<div class="row pb-3">
    @foreach(var product in Model){
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="height:calc(450 / 2); border:1px solid #20c997; border-radius:5px">
                    <div class="card" style="--bs-card-border-width:0px">
                        <img src="@product.ImageUrl" class="card-img-top rounded">
                        <div class="card-body">
                        <div class="pl-1">
                            <p class="card-title h5 text-primary">@product.Title</p>                            
                            <p class="card-title" style="--bs-gray-dark">by <b>@product.Author</b></p>
                        </div>
                        <div class="pl-1">
                            <p>List price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                        </div>
                        <div class="pl-1">
                            <p>As low as: <b>$@product.Price100.ToString("0.00")</b></p>
                        </div>
                        </div>
                    </div>
                    <div>
                        <a class="btn btn-secondary" style="width:100%; margin-top: 15px;"asp-action="Details" asp-route-id="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>